<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/orange">
    <RelativeLayout
        android:id="@+id/rlTitle"
        android:layout_width="match_parent"
        android:layout_height="220dp">
        <ImageView
            android:scaleType="fitXY"
            android:src="@mipmap/ic_login_bg"
            android:layout_centerHorizontal="true"
            android:textColor="@color/write"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <RelativeLayout
            android:layout_marginTop="40dp"
            android:background="@drawable/bg_view_orange_light_corner_600"
            android:layout_centerHorizontal="true"
            android:layout_width="100dp"
            android:layout_height="100dp">
            <TextView
                android:textStyle="bold"
                android:text="logo"
                android:textColor="@color/gh_white"
                android:textSize="20sp"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            android:src="@mipmap/ic_dabashou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </RelativeLayout>

    <RelativeLayout
        android:background="@color/orange"
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="320dp"
        android:layout_height="150dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/rlTitle"
        android:id="@+id/centerLay">
        <RelativeLayout
            android:paddingLeft="15dp"
            android:background="@drawable/bg_view_orange_light_corner_600"
            android:gravity="center_vertical"
            android:id="@+id/rlUser"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/ivUser"
                android:src="@mipmap/ic_user"
                android:layout_width="18dp"
                android:layout_height="20dp" />
            <View
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:id="@+id/line1"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/ivUser"
                android:background="@color/gh_white"
                android:layout_width="1px"
                android:layout_height="match_parent"/>
            <EditText
                android:hint="手机号"
                android:layout_toRightOf="@+id/line1"
                android:theme="@style/MyEditText"
                android:paddingLeft="10dp"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:id="@+id/phoneEdit"
                android:textColorHint="@color/gh_white"
                android:textColor="@color/gh_white"
                android:textSize="14sp"
                android:focusable="true"
                android:singleLine="true"
                android:focusableInTouchMode="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:paddingLeft="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_view_orange_light_corner_600"
            android:layout_below="@+id/rlUser"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/ivPsw"
                android:src="@mipmap/ic_lock"
                android:layout_width="18dp"
                android:layout_height="20dp" />
            <View
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:id="@+id/line2"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/ivPsw"
                android:background="@color/gh_white"
                android:layout_width="1px"
                android:layout_height="match_parent"/>
            <EditText
                android:hint="输入密码"
                android:layout_toRightOf="@+id/line2"
                android:background="@null"
                android:theme="@style/MyEditText"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:id="@+id/pswEdit"
                android:textColorHint="@color/gh_white"
                android:singleLine="true"
                android:textSize="14sp"
                android:inputType="textPassword"
                android:textColor="@color/gh_white"
                android:password="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_margin="10dp"
                />
        </RelativeLayout>

        <TextView
            android:layout_marginLeft="5dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="快速注册"
            android:id="@+id/registTxt"
            android:textSize="14dp"
            android:textColor="@color/gh_white"
            android:layout_marginTop="10dp" />
        <TextView
            android:text="忘记密码?"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/forget_passwordTxt"
            android:textColor="@color/gh_white"
            android:layout_marginLeft="15dp"
            />
        <ImageView
            android:visibility="visible"
            android:id="@+id/ivCloseText"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_close_circle"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <ImageView
            android:id="@+id/ivEye"
            android:layout_marginTop="90dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_eye_close"
            android:layout_width="20dp"
            android:layout_height="10dp" />
    </RelativeLayout>

    <TextView
        android:layout_below="@+id/centerLay"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:text="登录"
        android:id="@+id/loginTxt"
        android:textColor="@drawable/color_login"
        android:background="@drawable/btn_login"
        android:textSize="18dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <TextView
        android:textSize="16sp"
        android:visibility="gone"
        android:layout_below="@+id/loginTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="错误"
        android:layout_marginTop="20dp"
        android:id="@+id/notice"
        android:textColor="@color/gh_red"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>
